extends /page.pug

block header

block banner
  section#banner.major
    .inner
      header.major
        div
          img.logo(src="images/he_logo_text_rw_vert.svg" alt="Human Enginuity logo")
          p.logo.major Software Engineering | Technology Services

      .subtitle
        p.subtitle
          :markdown-it Software Designed to **Ship**.

block main
  #main
    section#one.tiles
      each tile in tiles
        article
          if tile.image
            span.image
              img(src=tile.image alt=tile.title)
          header.major
            h3= tile.title
            p
              :markdown-it= tile.excerpt
          if site.tile_links
            a.link.primary(href="/ship/#" + tile.slug)

    section#two
      .inner
        block content


