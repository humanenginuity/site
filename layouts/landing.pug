extends /page.pug

block header

block banner
  section#banner.major
    .inner
      header.major
        div
          img.logo(src="images/he_logo_text_rw_vert.svg" alt="Human Enginuity logo")
          p.logo.major Software Engineering | Technology Innovation

      .subtitle
        p.subtitle
          :markdown-it We develop innovative software solutions that are:
        p.subtitle
          :markdown-it * cheaper to deploy and maintain
        p.subtitle
          :markdown-it * ready sooner
        p.subtitle
          :markdown-it * of measurably higher quality.

block main
  #main
    section#one.tiles
      each tile in tiles
        article
          if tile.image
            span.image
              img(src=tile.image alt=tile.title)
          header.major
            h3= tile.title
            p
              :markdown-it= tile.excerpt
          if site.tile_links
            a.link.primary(href="/ship/#" + tile.slug)

    section#two
      .inner
        block content


